@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Chat with GPT-3.5</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/chat.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">Chat with GPT-3.5</div>
            <div class="card-body" id="chat-box" style="height: 300px; overflow-y: auto;"></div>
            <div class="card-footer d-flex">
                <input type="text" id="message-input" class="form-control me-2" placeholder="Type your message here..." onkeypress="handleKeyPress(event)">
                <button onclick="sendMessage()" class="btn btn-primary">Send</button>
                <button onclick="sendMessageWithHistory()" class="btn btn-primary">SendHistory</button>
                <button onclick="sendMessageToAutoGen()" class="btn btn-primary">SendAutogen</button>
            </div>
        </div>
    </div>
    <script src="~/js/chat.js"></script>
</body>

</html>
